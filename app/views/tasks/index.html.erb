<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= task.completed %> -> <strong><%= link_to task.title, task_path(task) %></strong>
      -- <%= link_to 'Edit', edit_task_path(task) %> <%= link_to "Delete",
                                                          task_path(task),
                                                          method: :delete,
                                                          data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>


<%= link_to "+ Create a task", new_task_path %>
